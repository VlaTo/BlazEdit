@inherits Components.EditorComponent

<div class="editor">
    <div class="editor-toolbar editor-toolbar-horizontal" role="toolbar">
        <div class="editor-toolbar-group">
            <DropDown Items=@Paragraphs TitleProperty="Title" >

            </DropDown>
        </div>
        <div class="editor-toolbar-group">
            <ToggleButton GroupName="Format" Command="@MakeBold" Tooltip="Bold">
                <svg width="24" height="24">
                    <path d="M7.8 19c-.3 0-.5 0-.6-.2l-.2-.5V5.7c0-.2 0-.4.2-.5l.6-.2h5c1.5 0 2.7.3 3.5 1 .7.6 1.1 1.4 1.1 2.5a3 3 0 0 1-.6 1.9c-.4.6-1 1-1.6 1.2.4.1.9.3 1.3.6s.8.7 1 1.2c.4.4.5 1 .5 1.6 0 1.3-.4 2.3-1.3 3-.8.7-2.1 1-3.8 1H7.8zm5-8.3c.6 0 1.2-.1 1.6-.5.4-.3.6-.7.6-1.3 0-1.1-.8-1.7-2.3-1.7H9.3v3.5h3.4zm.5 6c.7 0 1.3-.1 1.7-.4.4-.4.6-.9.6-1.5s-.2-1-.7-1.4c-.4-.3-1-.4-2-.4H9.4v3.8h4z" fill-rule="evenodd" />
                </svg>
            </ToggleButton>
            <ToggleButton GroupName="Format" Command="@MakeItalic" Tooltip="Italic">
                <svg width="24" height="24">
                    <path d="M16.7 4.7l-.1.9h-.3c-.6 0-1 0-1.4.3-.3.3-.4.6-.5 1.1l-2.1 9.8v.6c0 .5.4.8 1.4.8h.2l-.2.8H8l.2-.8h.2c1.1 0 1.8-.5 2-1.5l2-9.8.1-.5c0-.6-.4-.8-1.4-.8h-.3l.2-.9h5.8z" fill-rule="evenodd" />
                </svg>
            </ToggleButton>
        </div>
        <div class="editor-toolbar-group">
            <ToolButton>
                <svg width="24" height="24">
                    <path d="M5 5h14c.6 0 1 .4 1 1s-.4 1-1 1H5a1 1 0 1 1 0-2zm0 4h8c.6 0 1 .4 1 1s-.4 1-1 1H5a1 1 0 1 1 0-2zm0 8h8c.6 0 1 .4 1 1s-.4 1-1 1H5a1 1 0 0 1 0-2zm0-4h14c.6 0 1 .4 1 1s-.4 1-1 1H5a1 1 0 0 1 0-2z" fill-rule="evenodd" />
                </svg>
            </ToolButton>
        </div>
    </div>
    <div class="editor-edit-area" style="height: 400px;">
        <iframe 
            id="@EditorElementId"
            class="editor-edit"
            src="about:blank;"
            frameborder="0"
            allowtransparency="true"
            title="Rich Text Editor">
        </iframe>
    </div>
</div>
